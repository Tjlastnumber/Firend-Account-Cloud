.avatar-container {
    background: white;
    width: 100%;
    margin: 10rpx 0;
    padding: 10rpx;

    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
}

.user-avatar {
    background: white;
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin: 0;
}

.avatar {
    background: white;
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    padding-left: 2px;
    margin: 0;
}

.btn-add {
    border-radius: 50%;
    background-size: cover;
    background-color: white;
    width: 50rpx;
    height: 50rpx;
    padding: 2px;
    margin: 0;
}