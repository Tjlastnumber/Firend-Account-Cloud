<!--component/day-select/day-select.wxml-->
<view class="day-select">
  <scroll-view scroll-x
              scroll-with-animation
              class="day-select-day" 
              bindscroll="_onscroll"
              scroll-into-view="{{ 'd-' + ((selectedDay - 2) <= 0 ? 1 : (selectedDay - 2)) }}">
    <view class="day-item {{selectedDay == item.day ? 'selected' : today.day === item.day ? 'today' : ''}}" 
          wx:for="{{everyDay}}"
          wx:key="{{item.id}}"
          id="{{item.id}}">
      <view class="day-week"
            data-item="{{item}}" 
            bindtap="_selectDay">
        <text data-item="{{item}}" class="week">
          {{item.week}}
        </text>
        <text data-item="{{item}}" class="day">
          {{item.day}}
        </text>
      </view>
      <block wx:if="{{item.tag}}">
        <i></i>
      </block>
    </view> 
  </scroll-view>
</view>
