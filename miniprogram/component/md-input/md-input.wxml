<!--component/md-input/md-input.wxml-->
<view class='md-input {{inputClass}}' 
      style='--input-width: {{width}}; --border-color: {{color}}; --input-active-color: {{activeColor}};'>
  <input value="{{value}}" 
  class="{{_focus}}" 
  type='{{type}}' 
  bindfocus='onfocus' 
  bindblur='onblur' 
  bindinput='_handlerInput' auto-focus="{{autoFocus}}"/>
  <span class="bar {{_focus}}" 
  style="--margin-left: {{_placeholderWidth}}px"></span>
  <label id="md-input-placeholder"
         class="title {{_focus}}">{{placeholder}}</label>
</view>
